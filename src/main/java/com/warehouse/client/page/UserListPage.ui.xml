<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .cellTable {
        border-bottom: 1px solid #ccc;
        text-align: left;
        margin-bottom: 4px;
        }

    </ui:style>

    <g:DockLayoutPanel unit="EM">
        <g:north size="5">
            <b:Navbar>
                <b:NavbarHeader>
                    <b:NavbarBrand>User List</b:NavbarBrand>
                    <b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
                </b:NavbarHeader>

                <b:NavbarCollapse b:id="navbar-collapse">
                    <b:NavbarNav>
                        <b:AnchorListItem ui:field="newUser" b:id="newUserAnchorListItem">New</b:AnchorListItem>
                        <b:AnchorListItem>Edit</b:AnchorListItem>
                        <b:AnchorListItem>Delete</b:AnchorListItem>
                    </b:NavbarNav>
                    <b:NavbarForm pull="LEFT">

                        <b:InputGroup>
                            <b:TextBox placeholder="Search" autoComplete="false"/>
                            <b:InputGroupButton>
                                <b:Button text="..."/>
                            </b:InputGroupButton>
                        </b:InputGroup>
                    </b:NavbarForm>
                </b:NavbarCollapse>
            </b:Navbar>
        </g:north>
        <g:center>
            <c:DataGrid ui:field="dataGrid" styleName="{style.cellTable}" />
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>