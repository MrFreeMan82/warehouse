<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:with field="i18n" type="com.warehouse.client.i18n.I18N"/>

    <b:Form ui:field="form">
        <b:FormGroup>
            <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
            <b:TextBox ui:field="nameText" placeholder="{i18n.captionName}"/>
            <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE" />
            <b:TextBox ui:field="shortNameText" placeholder="{i18n.captionShortName}"/>
        </b:FormGroup>
        <b:FormGroup>
            <b:ButtonGroup id="btnGroup">
                <b:Button ui:field="newPrice" text="+"/>
                <b:Button ui:field="editPrice" text="^"/>
                <b:Button ui:field="deletePrice" text="-"/>
            </b:ButtonGroup>
            <c:CellTable ui:field="priceGrid"/>
        </b:FormGroup>
    </b:Form>
</ui:UiBinder>